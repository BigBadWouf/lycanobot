add_job('little_girl',{'initsub'=> sub {
	my $little_girl=shift;
	
	add_handler('msg', \&little_girl);
	add_handler('public',\&little_girl);
}});
our %special_jobs;
sub little_girl {
	on_public(@_);
	$little_girl=read_ply_pnick($special_jobs{'little_girl'}{'nick'});
	if($players{$little_girl}{'alive'}) {
		my ($conn, $event) = @_;
		my ($to, $msg) = ($event->to, $event->args);
		if($to eq $CFG{'night_channel'}) {
			$conn->privmsg($little_girl,$msg);
		}
	}
}

